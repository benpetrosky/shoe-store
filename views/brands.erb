<h1>Here You Can See a List of All of the Shoe Brands in the Database</h1>

<% if @brands.any?() %>
    <ul>
    <% @brands.each() do |brand| %>
      <li><a href="/brands/<%= brand.id() %>"><%= brand.name() %></a>
          <br>
          <p>$<%= brand.price() %>.00</p>
      </li>
    <% end %>
    </ul>

<% else %>
    <h5>There are no brands in the database.</h5>
<% end %>

<form action="/brands" method="post">
  <label for="name">Enter In The Name of The Shoe Brand</label>
  <input type="text" name="name">
  <label for="price">Enter In The price</label>
  <input type="number" name="price">

  <button type="submit">Add Brand</button>

</form>

<button>
<a href="/">Back Home</a>
</button>
